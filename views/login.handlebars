<div class="row">
    <div class="col-md-8 mx-auto mt-0 mt-md-4">
        <div class="card card-body">
            <img class="align-self-center py-4" src="/img/logo_icon.png" width="200" alt='<i class="fas fa-user fa-8x"></i>'>
            <h3 class="text-center display-4">Account Login</h3>
            <form method="post" action="/user/login">
                <div class="form-group">
                    <label for="email" class="">Email</label>
                    <input type="email" class="form-control" name="email" required>
                </div>
                <div class="form-group">
                    <label for="password" class="">Password</label>
                    <input type="password" class="form-control" name="password" required>
                    <!-- TODO: Change href based on open GitHub issue -->
                    <a href="/user/reset" class="form-text text-">Forgot Password</a>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>