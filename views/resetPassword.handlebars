<div class="card card-body">
    <img class="align-self-center py-4" src="/img/logo_icon.png" width="200" alt='<IdeaHackers Logo'>
    <h3 class="text-center display-4">Account Login</h3>
    <form method="post" action="/user/reset/">
        <div class="form-group">
            <input type="hidden" class="form-control" name="hiddenToken" value="{{token}}">

        </div>
        <div class="form-group">
            <label for="email" class="">New Password</label>
            <input type="password" class="form-control" name="password" required>
        </div>
        <div class="form-group">
            <label for="password" class="">Confirm Password</label>
            <input type="password" class="form-control" name="passwordConf" required>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>