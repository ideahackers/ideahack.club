<div class="card card-body">
    <div class="text-center m-5">
        <i class="fas fa-key fa-8x pr-3"></i>
    </div>

    <h3 class="text-center display-4">Reset Password</h3>
    <p class="text-center">Hello <u>{{name}}</u>, please fill out the form to reset password.</p>
    <form method="post" action="/user/reset/">
        <div class="form-group">
            <input type="hidden" class="form-control" name="hiddenToken" value="{{token}}">

        </div>
        <div class="form-group">
            <label for="email" class="">New Password</label>
            <input type="password" class="form-control" name="password" required>
        </div>
        <div class="form-group">
            <label for="password" class="">Confirm Password</label>
            <input type="password" class="form-control" name="passwordConf" required>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>